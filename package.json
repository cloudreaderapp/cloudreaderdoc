{
  "name": "cloud-reader-doc",
  "version": "1.0.0",
  "description": "A minimal Eleventy template for a documentation site using Tailwind CSS.",
  "main": "index.js",
  "scripts": {
    "dev": "eleventy --serve & npx tailwindcss -i src/assets/css/index.css -c tailwind.config.js -o _site/index.css --watch",
    "build": "eleventy && npx tailwindcss -i src/assets/css/index.css -c tailwind.config.js -o _site/index.css --minify"
  },
  "author": "CloudReader.app",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^2.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.7",
    "tailwindcss": "^3.1.8"
  }
}
